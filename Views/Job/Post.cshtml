@model JobPortal.Models.Job
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Post a New Job";
}

@if (!SignInManager.IsSignedIn(User) || (!User.IsInRole("Admin") && !User.IsInRole("Employer")))
{
    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Unauthorized Access</h4>
        <p>You must be signed in as an administrator or employer to post new jobs.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Post a New Job</h2>
        </div>
        <div class="card-body">
            <form asp-action="Post" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Job Title</label>
                    <input asp-for="Title" class="form-control" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="Company" class="form-label">Company Name</label>
                    <input asp-for="Company" class="form-control" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Job Description</label>
                    <textarea asp-for="Description" class="form-control" rows="6" required></textarea>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Salary" class="form-label">Salary</label>
                    <input asp-for="Salary" class="form-control" type="number" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="JobType" class="form-label">Job Type</label>
                    <select asp-for="JobType" asp-items="Html.GetEnumSelectList<JobPortal.Models.Enums.JobType>()" class="form-select" required>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Job Status</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<JobPortal.Models.Enums.JobStatus>()" class="form-select" required>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                    <small class="form-text text-muted">Leave blank if the job doesn't have an expiry date</small>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Requirements" class="form-label">Requirements</label>
                    <textarea asp-for="Requirements" class="form-control" rows="4"></textarea>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Benefits" class="form-label">Benefits</label>
                    <textarea asp-for="Benefits" class="form-control" rows="4"></textarea>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Tags" class="form-label">Tags (comma-separated)</label>
                    <input asp-for="Tags" class="form-control" placeholder="e.g. remote, developer, junior" />
                </div>
                
                @if (User.IsInRole("Admin"))
                {
                    <div class="mb-3">
                        <label asp-for="EmployerId" class="form-label">Employer Email</label>
                        <input asp-for="EmployerId" class="form-control" placeholder="Enter employer's email" />
                        <small class="form-text text-muted">If left empty, this job will be assigned to the default admin account</small>
                    </div>
                }
                else if (User.IsInRole("Employer"))
                {
                    <input type="hidden" name="EmployerId" value="@User.Identity?.Name" />
                }
                
                <div class="d-flex justify-content-between">
                    <a asp-controller="Job" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane me-2"></i>Submit Job
                    </button>
                </div>
            </form>
        </div>
    </div>
}
