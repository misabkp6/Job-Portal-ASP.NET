@model X.PagedList.IPagedList<JobPortal.Models.Job>
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using JobPortal.Models.Enums

@{
    ViewData["Title"] = "Manage My Jobs";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">
            <i class="fas fa-briefcase text-primary me-2"></i> Manage My Jobs
        </h1>
        <a asp-controller="Job" asp-action="Post" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i> Post New Job
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <div class="text-center py-5">
                <i class="fas fa-info-circle fa-3x mb-3 text-info"></i>
                <h3>No jobs posted yet</h3>
                <p class="mb-4">You haven't posted any jobs yet. Get started by posting your first job opening!</p>
                <a asp-controller="Job" asp-action="Post" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i> Post Your First Job
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span class="fw-bold">
                    <i class="fas fa-list me-2"></i> Your Job Listings
                </span>
                <span class="badge bg-primary">@Model.TotalItemCount Jobs</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Posted</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Applications</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id" class="text-decoration-none fw-medium">
                                            @job.Title
                                        </a>
                                        <div class="text-muted small">@job.Company</div>
                                    </td>
                                    <td>
                                        <span class="text-muted" title="@job.PostedDate">
                                            @(((DateTime)job.PostedDate).ToString("MMM d, yyyy"))
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = job.JobType switch
                                            {
                                                JobType.FullTime => "badge bg-primary",
                                                JobType.PartTime => "badge bg-info",
                                                JobType.Contract => "badge bg-warning",
                                                JobType.Temporary => "badge bg-danger",
                                                JobType.Internship => "badge bg-success",
                                                JobType.Remote => "badge bg-secondary",
                                                _ => "badge bg-secondary"
                                            };
                                        }
                                        <span class="@badgeClass">@job.JobType</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusBadgeClass = job.Status switch
                                            {
                                                JobStatus.Active => "badge bg-success",
                                                JobStatus.Expired => "badge bg-danger",
                                                JobStatus.Filled => "badge bg-info",
                                                JobStatus.Draft => "badge bg-secondary",
                                                _ => "badge bg-secondary"
                                            };
                                        }
                                        <span class="@statusBadgeClass">@job.Status</span>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-users me-1"></i> View
                                        </a>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-controller="Job" asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteJob@(job.Id)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteJob@(job.Id)" tabindex="-1" aria-labelledby="deleteJobModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteJobModalLabel">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete the job posting for "<strong>@job.Title</strong>"?
                                                        This action cannot be undone.
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-controller="Job" asp-action="Delete" asp-route-id="@job.Id" method="post">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-center">
                    @Html.PagedListPager(Model, page => Url.Action("MyJobs", new { page }),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            ContainerDivClasses = new[] { "pagination pagination-sm justify-content-center mb-0" }
                        })
                </div>
            </div>
        </div>
    }
</div>
