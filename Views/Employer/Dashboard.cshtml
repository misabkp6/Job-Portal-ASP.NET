@{
    ViewData["Title"] = "Employer Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Employer Dashboard</h3>
                <span class="badge bg-primary">@DateTime.Now.ToString("MMMM yyyy")</span>
            </div>
        </div>
    </div>
</div>

<!-- Key stats cards -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stat-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalJobs</div>
            <div class="stat-label">Total Jobs</div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalApplications</div>
            <div class="stat-label">Total Applications</div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-value">@ViewBag.ActiveJobs</div>
            <div class="stat-label">Active Jobs</div>
        </div>
    </div>
</div>

<!-- Two column layout -->
<div class="row">
    <!-- Left column -->
    <div class="col-lg-8">
        <!-- Recent applications -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2 text-primary"></i>Recent Applications</h5>
                    <a asp-controller="Employer" asp-action="Applications" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Applicant</th>
                                <th>Job</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentApplications != null && ViewBag.RecentApplications.Count > 0)
                            {
                                foreach (var app in ViewBag.RecentApplications)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-light rounded-circle text-center me-2">
                                                    <span class="text-muted">@app.ApplicantName.Substring(0, 1).ToUpper()</span>
                                                </div>
                                                <div>
                                                    <span class="fw-medium">@app.ApplicantName</span><br />
                                                    <small class="text-muted">@app.ApplicantEmail</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@app.Job.Title</td>
                                        <td>@app.AppliedOn.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @{
                                                string badgeClass = "bg-secondary";
                                                
                                                switch (app.Status)
                                                {
                                                    case JobPortal.Models.Enums.ApplicationStatus.Submitted:
                                                        badgeClass = "bg-info";
                                                        break;
                                                    case JobPortal.Models.Enums.ApplicationStatus.UnderReview:
                                                        badgeClass = "bg-primary";
                                                        break;
                                                    case JobPortal.Models.Enums.ApplicationStatus.Shortlisted:
                                                        badgeClass = "bg-warning";
                                                        break;
                                                    case JobPortal.Models.Enums.ApplicationStatus.Interviewed:
                                                        badgeClass = "bg-indigo";
                                                        break;
                                                    case JobPortal.Models.Enums.ApplicationStatus.Accepted:
                                                        badgeClass = "bg-success";
                                                        break;
                                                    case JobPortal.Models.Enums.ApplicationStatus.Rejected:
                                                        badgeClass = "bg-danger";
                                                        break;
                                                }
                                            }
                                            <span class="badge @badgeClass">@app.Status</span>
                                        </td>
                                        <td>
                                            <a asp-controller="Employer" asp-action="ApplicationDetails" 
                                               asp-route-id="@app.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-3">
                                        <div class="text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i>
                                            <p>No applications received yet</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right column -->
    <div class="col-lg-4">
        <!-- Job status -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2 text-primary"></i>Job Status</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-4">
                    <div class="text-center">
                        <h4 class="mb-0">@ViewBag.ActiveJobs</h4>
                        <span class="badge bg-success">Active</span>
                    </div>
                    <div class="text-center">
                        <h4 class="mb-0">@ViewBag.ExpiredJobs</h4>
                        <span class="badge bg-danger">Expired</span>
                    </div>
                </div>
                
                <div class="d-grid gap-2">
                    <a asp-controller="Job" asp-action="Post" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Post New Job
                    </a>
                    <a asp-controller="Employer" asp-action="Jobs" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>Manage All Jobs
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Application stats -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-file-alt me-2 text-primary"></i>Application Status</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <span>New applications</span>
                    <span class="badge bg-info">@ViewBag.NewApplications</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Under review</span>
                    <span class="badge bg-primary">@ViewBag.ReviewingApplications</span>
                </div>
                
                <div class="d-grid gap-2 mt-4">
                    <a asp-controller="Employer" asp-action="Applications" class="btn btn-outline-primary">
                        <i class="fas fa-file-alt me-2"></i>Manage Applications
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stats-card {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 8px;
            padding: 1.5rem;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            transition: transform 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
        }
        
        .stat-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }
        
        .stat-label {
            color: #6c757d;
            font-weight: 500;
        }
        
        .avatar-sm {
            width: 32px;
            height: 32px;
            line-height: 32px;
        }
    </style>
}
