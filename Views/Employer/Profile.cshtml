@model JobPortal.Models.CompanyProfile

@{
    ViewData["Title"] = "Company Profile";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="fas fa-building me-2"></i>Company Profile</h3>
                    <a asp-controller="Employer" asp-action="EditProfile" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Profile
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Company logo placeholder (no URLs) -->
                    <div class="col-md-3 text-center mb-4">
                        <div class="company-placeholder mb-3">
                            <i class="fas fa-building fa-5x text-muted"></i>
                        </div>
                    </div>
                    
                    <!-- Company details -->
                    <div class="col-md-9">
                        <h2 class="mb-3">@Model.CompanyName</h2>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="text-muted mb-1">
                                        <i class="fas fa-industry me-2"></i>Industry
                                    </div>
                                    <div>@(Model.Industry ?? "Not specified")</div>
                                </div>
                                
                                <div class="mb-3">
                                    <div class="text-muted mb-1">
                                        <i class="fas fa-map-marker-alt me-2"></i>Location
                                    </div>
                                    <div>@(Model.Location ?? "Not specified")</div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="text-muted mb-1">
                                        <i class="fas fa-phone me-2"></i>Phone
                                    </div>
                                    <div>@(Model.PhoneNumber ?? "Not specified")</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="mb-3">About the Company</h5>
                            <div class="p-3 bg-light rounded">
                                @Model.Description
                            </div>
                        </div>
                        
                        @* Social media links section removed as requested *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .company-logo {
            max-height: 150px;
            max-width: 100%;
            object-fit: contain;
        }
        
        .company-placeholder {
            background-color: #f8f9fa;
            border-radius: 5px;
            height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}
