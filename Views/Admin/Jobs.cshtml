@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<JobPortal.Models.Job>

@{
    ViewData["Title"] = "Manage Job Listings";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-briefcase me-2"></i>Manage Job Listings</h3>
        <a asp-controller="Job" asp-action="Post" class="btn btn-success"><i class="fas fa-plus-circle me-2"></i>Add New Job</a>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <form asp-controller="Admin" asp-action="Jobs" method="get">
                    <div class="input-group">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search jobs..." value="@ViewBag.SearchTerm">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-md-2 ms-auto">
                <select class="form-select">
                    <option>All Jobs</option>
                    <option>Recent Jobs</option>
                    <option>Featured Jobs</option>
                </select>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="fas fa-filter me-2 fs-4"></i>
                <div>
                    Showing results for: <strong>@ViewBag.SearchTerm</strong> 
                    (@ViewBag.SearchCount results found)
                    <a asp-controller="Admin" asp-action="Jobs" class="ms-3 text-decoration-none">
                        <i class="fas fa-times-circle me-1"></i>Clear
                    </a>
                </div>
            </div>
        }
        
        @if (!Model.Any())
        {
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="fas fa-info-circle me-2 fs-4"></i>
                <div>No jobs have been posted yet. Click on "Add New Job" to create your first job listing.</div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col"><i class="fas fa-briefcase me-1"></i> Title</th>
                            <th scope="col"><i class="fas fa-building me-1"></i> Company</th>
                            <th scope="col"><i class="fas fa-map-marker-alt me-1"></i> Location</th>
                            <th scope="col"><i class="fas fa-calendar-alt me-1"></i> Posted Date</th>
                            <th scope="col"><i class="fas fa-cog me-1"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var job in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold">@job.Title</td>
                            <td>@job.Company</td>
                            <td>@job.Location</td>
                            <td><span class="badge bg-light text-dark">@job.PostedDate.ToShortDateString()</span></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="#" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Edit Job">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="DeleteJob" asp-route-id="@job.Id" class="btn btn-sm btn-outline-danger" 
                                       onclick="return confirm('Are you sure you want to delete this job?');" data-bs-toggle="tooltip" title="Delete Job">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-center mt-4">
                @Html.PagedListPager(Model, page => Url.Action("Jobs", new { page }))
            </div>
        }
    </div>
}
