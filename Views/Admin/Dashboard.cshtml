@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h3>
                <span class="badge bg-primary">@DateTime.Now.ToString("MMMM yyyy")</span>
            </div>
        </div>
    </div>
</div>

<!-- Key stats cards -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stat-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalJobs</div>
            <div class="stat-label">Total Jobs</div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalApplications</div>
            <div class="stat-label">Total Applications</div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stats-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-value">@ViewBag.TotalUsers</div>
            <div class="stat-label">Registered Users</div>
        </div>
    </div>
</div>

<!-- Charts -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Job Trends</h5>
                <div>
                    <button class="btn btn-sm btn-outline-secondary" title="Download Report" data-bs-toggle="tooltip">
                        <i class="fas fa-download"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <canvas id="jobChart" height="250"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>User Distribution</h5>
                <div>
                    <button class="btn btn-sm btn-outline-secondary" title="Download Report" data-bs-toggle="tooltip">
                        <i class="fas fa-download"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <canvas id="userRoleChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Admin" asp-action="Jobs" class="btn btn-primary btn-lg w-100 py-3">
                            <i class="fas fa-list me-2"></i>View All Jobs
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Admin" asp-action="Applications" class="btn btn-success btn-lg w-100 py-3">
                            <i class="fas fa-file-alt me-2"></i>View Applications
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="#" class="btn btn-warning btn-lg w-100 py-3">
                            <i class="fas fa-user-plus me-2"></i>Add New User
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="#" class="btn btn-info btn-lg w-100 py-3">
                            <i class="fas fa-cog me-2"></i>System Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Configure nice color palettes
        const jobChartColors = ['rgba(54, 162, 235, 0.7)'];
        const roleChartColors = [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255, 0.7)'
        ];

        // Job Count Chart
        var jobChart = new Chart(document.getElementById("jobChart"), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.JobMonths)),
                datasets: [{
                    label: 'Jobs Posted',
                    data: @Html.Raw(Json.Serialize(ViewBag.JobCounts)),
                    backgroundColor: jobChartColors,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Monthly Job Posting Trends'
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Number of Jobs'
                        },
                        ticks: {
                            precision: 0
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Month'
                        }
                    }
                }
            }
        });

        // User Role Chart
        var roleChart = new Chart(document.getElementById("userRoleChart"), {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.RoleLabels)),
                datasets: [{
                    label: 'User Roles',
                    data: @Html.Raw(Json.Serialize(ViewBag.RoleCounts)),
                    backgroundColor: roleChartColors,
                    borderColor: 'white',
                    borderWidth: 2,
                    hoverOffset: 15
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right',
                    },
                    title: {
                        display: true,
                        text: 'User Role Distribution'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.raw || 0;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = Math.round((value / total) * 100);
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });
    </script>
}
