@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<JobPortal.Models.Application>

@{
    ViewData["Title"] = "Manage Applications";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-file-alt me-2"></i>All Applications</h3>
        <div>
            <button class="btn btn-outline-primary me-2"><i class="fas fa-file-export me-2"></i>Export</button>
            <div class="btn-group">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-filter me-2"></i>Filter
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">All Applications</a></li>
                    <li><a class="dropdown-item" href="#">Recent Applications</a></li>
                    <li><a class="dropdown-item" href="#">By Job Title</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="fas fa-info-circle me-2 fs-4"></i>
                <div>No applications have been submitted yet.</div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col"><i class="fas fa-user me-1"></i> Applicant</th>
                            <th scope="col"><i class="fas fa-envelope me-1"></i> Email</th>
                            <th scope="col"><i class="fas fa-file-pdf me-1"></i> Resume</th>
                            <th scope="col"><i class="fas fa-briefcase me-1"></i> Job Title</th>
                            <th scope="col"><i class="fas fa-calendar-alt me-1"></i> Applied On</th>
                            <th scope="col"><i class="fas fa-cog me-1"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var app in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold">@app.ApplicantName</td>
                            <td><a href="mailto:@app.ApplicantEmail">@app.ApplicantEmail</a></td>
                            <td>
                                <a href="@app.ResumePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-file-pdf me-1"></i> View Resume
                                </a>
                            </td>
                            <td><span class="badge bg-light text-dark">@(app.Job?.Title ?? "N/A")</span></td>
                            <td>@app.AppliedOn.ToShortDateString()</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="#" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip" title="Download Resume">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a asp-action="DeleteApplication" asp-route-id="@app.Id" 
                                       class="btn btn-sm btn-outline-danger" 
                                       onclick="return confirm('Are you sure you want to delete this application?');"
                                       data-bs-toggle="tooltip" title="Delete Application">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-center mt-4">
                @Html.PagedListPager(Model, page => Url.Action("Applications", new { page }))
            </div>
        }
    </div>
}
