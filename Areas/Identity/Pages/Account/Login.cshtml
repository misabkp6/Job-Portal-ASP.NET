@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="row g-0">
                    <!-- Left side image -->
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="h-100" style="background: linear-gradient(135deg, var(--primary-color), var(--accent-color)); border-radius: 0.5rem 0 0 0.5rem;">
                            <div class="d-flex flex-column justify-content-center h-100 p-5 text-white">
                                <h2 class="display-6 fw-bold mb-4">Welcome Back</h2>
                                <p class="lead">Access your account to find opportunities that match your skills and experience.</p>
                                <div class="mt-5">
                                    <div class="d-flex align-items-center mb-4">
                                        <div class="bg-white rounded-circle p-2 me-3">
                                            <i class="fas fa-search text-primary"></i>
                                        </div>
                                        <div>Discover top job opportunities</div>
                                    </div>
                                    <div class="d-flex align-items-center mb-4">
                                        <div class="bg-white rounded-circle p-2 me-3">
                                            <i class="fas fa-file-alt text-primary"></i>
                                        </div>
                                        <div>Apply with a single click</div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-white rounded-circle p-2 me-3">
                                            <i class="fas fa-chart-line text-primary"></i>
                                        </div>
                                        <div>Track your applications</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right side form -->
                    <div class="col-lg-6">
                        <div class="card-body p-lg-5 p-4">
                            <div class="text-center mb-4">
                                <h1 class="h3 fw-bold">Sign In to JobPortal</h1>
                                <p class="text-muted">Enter your credentials to access your account</p>
                            </div>

                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">
                                        <i class="fas fa-envelope me-2 text-muted"></i>Email address
                                    </label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-4">
                                    <label asp-for="Input.Password" class="form-label">
                                        <i class="fas fa-lock me-2 text-muted"></i>Password
                                    </label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                                    </div>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary">Forgot password?</a>
                                </div>
                                
                                <div class="d-grid mb-4">
                                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                    </button>
                                </div>
                                
                                <div class="text-center">
                                    <p class="mb-0">Don't have an account? 
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-primary">Create Account</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
